        "@types/jest": "^29.5.0",
        "is-callable": "^1.2.7",
        "jest": "^29.5.0",
        "ts-jest": "^29.1.0",
        "ts-patch": "^3.3.0",
        "tsconfig-paths": "^4.2.0",
        "typescript-transform-paths": "^3.5.3"
    },
    "peerDependencies": {
        "@ptolemy2002/ts-brand-utils": "^1.0.0",
        "@ptolemy2002/ts-utils": "^3.4.0",
